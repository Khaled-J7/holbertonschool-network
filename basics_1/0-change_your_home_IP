#!/usr/bin/env bash
# This script changes the home IP and resolves facebook.com to 8.8.8.8

# Step 1: Backup the original /etc/hosts file
sudo cp /etc/hosts /etc/hosts.backup

# Step 2: Modify /etc/hosts to change localhost and facebook.com
sudo sed -i '/127.0.0.1\s\+localhost/s/127.0.0.1/127.0.0.2/' /etc/hosts
echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts

echo "Home IP and facebook.com resolution updated."
